{
  "include": ["**/*"],
  "compilerOptions": {
    "types": ["node"],
    "target": "es2016",
    "module": "commonjs",
    "jsx": "preserve",
    "allowJs": true,
    "declaration": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./build"
  }
}
