{
  "name": "repixelact",
  "imports": {
    "@*": [
      "./src/*",
      "./src/*.ts",
      "./src/*.tsx"
    ]
  },
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint . --ext .js,.jsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@reduxjs/toolkit": "^2.2.1",
    "@types/react-redux": "^7.1.33",
    "@types/redux-logger": "^3.0.13",
    "@types/web": "^0.0.142",
    "@vitejs/plugin-react-refresh": "^1.3.6",
    "d3": "^7.9.0",
    "d3-delaunay": "^6.0.4",
    "localforage": "^1.10.0",
    "prop-types": "^15.8.1",
    "react": "^18.2.0",
    "react-compare-image": "^3.4.0",
    "react-dom": "^18.2.0",
    "react-redux": "^9.1.0",
    "react-toastify": "^10.0.4",
    "redux-logger": "^3.0.6",
    "redux-persist": "^6.0.0",
    "redux-thunk": "^3.1.0",
    "vite-plugin-react": "^4.0.1"
  },
  "devDependencies": {
    "@types/d3": "^7.4.3",
    "@types/node": "^20.11.25",
    "@types/parse-package-name": "^0.1.3",
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.19",
    "@typescript-eslint/eslint-plugin": "^7.1.1",
    "@typescript-eslint/parser": "^7.1.1",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "css-loader": "^6.10.0",
    "eslint": "^8.57.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-prettier": "^5.1.2",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "file-loader": "^6.2.0",
    "less": "^4.2.0",
    "less-loader": "^12.2.0",
    "prettier": "^3.2.5",
    "style-loader": "^3.3.4",
    "typescript": "^5.4.2",
    "vite": "^5.1.5",
    "vite-plugin-imp": "^2.4.0",
    "vite-tsconfig-paths": "^4.3.2"
  },
  "eslintConfig": {
    "extends": [
      "airbnb",
      "eslint:recommended",
      "plugin:react/recommended",
      "plugin:react-hooks/recommended"
    ],
    "rules": {
      "implicit-arrow-linebreak": [
        "error",
        "beside"
      ],
      "no-tabs": "off",
      "indent": [
        "error",
        2
      ],
      "quotes": [
        "error",
        "double",
        {
          "allowTemplateLiterals": true
        }
      ],
      "import/no-extraneous-dependencies": [
        "error",
        {
          "devDependencies": [
            "**/*.test.js",
            "**/*.spec.js",
            "**/vite.config.js",
            "**/vite.config.ts",
            "**/node_modules/vite/**",
            "**/node_modules/@vitejs/plugin-react/**"
          ]
        }
      ]
    },
    "env": {
      "browser": true,
      "es2021": true,
      "node": true
    },
    "parserOptions": {
      "ecmaFeatures": {
        "jsx": true
      },
      "ecmaVersion": 12,
      "sourceType": "module"
    },
    "settings": {
      "react": {
        "version": "detect"
      }
    }
  }
}
